<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.WIP"
    android:id="@+id/fragment_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/wip_text"
        android:layout_width="@dimen/header_wip_width"
        android:layout_height="@dimen/header_wip_height"
        android:layout_marginStart="@dimen/header_wip_marginStart"
        android:layout_marginTop="@dimen/header_wip_marginTop"
        android:layout_marginEnd="@dimen/header_wip_marginEnd"
        android:rotation="-15"
        android:text="@string/app_name"
        android:textAppearance="@style/title"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_header"
        android:layout_width="@dimen/header_divider_width"
        android:layout_height="@dimen/header_divider_height"
        android:layout_marginStart="@dimen/header_divider_marginStart"
        android:layout_marginTop="@dimen/header_divider_marginTop"
        android:layout_marginEnd="@dimen/header_divider_marginEnd"
        android:background="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wip_text" />
</androidx.constraintlayout.widget.ConstraintLayout>