<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--
        utilizza il background che sta nella splashpage piuttosto che il colore primario
        android:background="@drawable/pd_1"
        -->

        <!--
        immage button 1 fede
        <ImageButton
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="103dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/paint_button_official"
            android:contentDescription="tasto home del menù "
            android:pointerIcon="context_menu"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/menu_world"
            app:layout_constraintEnd_toStartOf="@+id/menu_world"
            app:layout_constraintStart_toEndOf="@+id/menu_settings"
            app:layout_constraintVertical_bias="0.974"></ImageButton>
        -->

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="32dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/pennello"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            app:layout_constraintStart_toEndOf="@+id/kingdomButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.945"
            app:srcCompat="@drawable/paint_button" />

        <!--
        immage button 2 fede
        <ImageButton
            android:id="@+id/menu_world"
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/crown_button_official"
            android:contentDescription="tasto il mio mondo del menù "
            android:pointerIcon="context_menu"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menu_home"
            app:layout_constraintVertical_bias="0.974">
        </ImageButton>
        -->

        <ImageButton
            android:id="@+id/kingdomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/corona"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeButton"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.974"
            app:srcCompat="@drawable/crown_button"
            tools:ignore="ImageContrastCheck" />

        <!--
        immage button 3 fede
        <ImageButton
            android:id="@+id/menu_settings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="43dp"
            android:background="@drawable/gear_button_official"
            android:contentDescription="tasto impostazioni del menù"
            android:pointerIcon="context_menu"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/menu_world"
            app:layout_constraintEnd_toStartOf="@+id/menu_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_world"
            app:layout_constraintVertical_bias="0.974"></ImageButton>
        -->

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/impostazioni"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/homeButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.974"
            app:srcCompat="@drawable/gear_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

