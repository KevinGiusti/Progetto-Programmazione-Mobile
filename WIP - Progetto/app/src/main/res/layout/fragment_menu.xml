<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary">

    <ImageButton
        android:id="@+id/menu_home"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/paint_button_official"
        android:contentDescription="tasto home del menù "
        android:pointerIcon="context_menu"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/menu_world"
        app:layout_constraintEnd_toStartOf="@+id/menu_world"
        app:layout_constraintStart_toEndOf="@+id/menu_settings"
        app:layout_constraintVertical_bias="0.974"></ImageButton>

    <ImageButton
        android:id="@+id/menu_world"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/crown_button_official"
        android:contentDescription="tasto il mio mondo del menù "
        android:pointerIcon="context_menu"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_home"
        app:layout_constraintVertical_bias="0.974">
    </ImageButton>

    <ImageButton
        android:id="@+id/menu_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="43dp"
        android:background="@drawable/gear_button_official"
        android:contentDescription="tasto impostazioni del menù"
        android:pointerIcon="context_menu"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/menu_world"
        app:layout_constraintEnd_toStartOf="@+id/menu_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_world"
        app:layout_constraintVertical_bias="0.974"></ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>